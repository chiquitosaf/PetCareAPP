<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.alamat.RecycleViewAlamat"
    android:id="@+id/alamat_layout">

    <!-- toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar_alamat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <!-- back button -->
        <ImageButton
            android:id="@+id/btn_back_alamat"
            android:contentDescription="back button alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:src="@drawable/baseline_arrow_back_30"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_back_alamat"
            android:text="Alamat"
            android:textSize="25sp"
            android:fontFamily="@font/cabin_semibold"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>

        <!-- add button -->
        <ImageButton
            android:id="@+id/btn_add_alamat"
            android:contentDescription="add button alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:src="@drawable/baseline_add_circle_outline_30"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <!-- recycle view for list of alamat -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_alamat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_alamat"
        android:background="@color/backgroundColor">


    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>

