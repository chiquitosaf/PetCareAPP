<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/white">


    <!-- toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar_alamat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <!-- back button -->
        <ImageButton
            android:id="@+id/btn_close_alamat_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="close popup button"
            android:padding="13dp"
            android:src="@drawable/baseline_close_30" />

        <TextView
            android:id="@+id/tag_alamat_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/btn_close_alamat_popup"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:text="tag_alamat"
            android:textSize="30sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/description_alamat_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="alamat description"
        android:layout_margin="13dp"
        android:textSize="20sp"
        android:layout_below="@id/toolbar_alamat"/>
</RelativeLayout>